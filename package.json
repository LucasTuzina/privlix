{
  "name": "privlix",
  "version": "1.0.0",
  "description": "Private Media Library - Netflix-style local streaming application",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"wait-on http://localhost:3001 && npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "electron-builder install-app-deps && npm run build:main && electron .",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "esbuild src/main/index.ts --bundle --platform=node --outfile=dist/main/index.js --external:electron --external:chokidar --external:fuse.js",
    "electron": "electron .",
    "dist": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "type-check": "tsc --noEmit --skipLibCheck"
  },
  "keywords": [
    "electron",
    "vue",
    "media",
    "streaming",
    "netflix"
  ],
  "author": "Astronsoft",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@vitejs/plugin-vue": "^4.4.0",
    "concurrently": "^8.2.0",
    "electron": "^26.2.1",
    "electron-builder": "^24.6.4",
    "esbuild": "^0.19.2",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vue-tsc": "^1.4.2",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "fuse.js": "^6.6.2",
    "pinia": "^2.1.6",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4"
  },
  "build": {
    "appId": "com.astronsoft.privlix",
    "productName": "Privlix",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.entertainment"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
