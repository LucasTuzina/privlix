{
  "name": "privlix",
  "version": "1.0.0",
  "type": "module",
  "description": "Private Media Library - Netflix-style local streaming application",
  "main": "dist/main/index.cjs",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"wait-on tcp:3000 && npm run dev:main\"",
    "dev:renderer": "vite --config vite.config.ts",
    "dev:main": "electron-builder install-app-deps && npm run build:main && NODE_ENV=development electron .",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build --config vite.config.ts",
    "build:main": "esbuild src/main/index.ts --bundle --platform=node --outfile=dist/main/index.cjs --format=cjs --external:electron --external:chokidar --external:fuse.js && esbuild src/main/preload.ts --bundle --platform=node --outfile=dist/main/preload.js --format=cjs --external:electron",
    "electron": "electron .",
    "dist": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "type-check": "tsc --noEmit --skipLibCheck",
    "lint": "eslint . --ext .vue,.js,.ts,.tsx",
    "lint:fix": "eslint . --ext .vue,.js,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{vue,js,ts,tsx,json,css,scss,md}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"src/**/*.{vue,js,ts,tsx,json,css,scss,md}\" --ignore-path .prettierignore",
    "code-quality": "npm run lint:fix && npm run format",
    "pre-commit": "npm run type-check && npm run lint && npm run format:check",
    "prepare": "husky"
  },
  "keywords": [
    "electron",
    "vue",
    "media",
    "streaming",
    "netflix"
  ],
  "author": "Astronsoft",
  "license": "MIT",
  "devDependencies": {
    "@intlify/unplugin-vue-i18n": "^6.0.8",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-vue": "^4.4.0",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "concurrently": "^8.2.0",
    "electron": "^26.2.1",
    "electron-builder": "^24.6.4",
    "esbuild": "^0.19.2",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-vue": "^10.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vue-tsc": "^1.4.2",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "fuse.js": "^6.6.2",
    "pinia": "^2.1.6",
    "vue": "^3.3.4",
    "vue-i18n": "^9.14.5",
    "vue-router": "^4.2.4"
  },
  "build": {
    "appId": "com.astronsoft.privlix",
    "productName": "Privlix",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.entertainment"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{vue,js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
